{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Obscur",
  "identifier": "app.obscur.desktop",
  "version": "0.2.9",
  "build": {
    "beforeDevCommand": "pnpm -C ../pwa dev",
    "beforeBuildCommand": "cross-env TAURI_BUILD=true pnpm -C ../pwa build",
    "frontendDist": "../../pwa/out"
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "dmg",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Obscur",
    "copyright": "Copyright Â© 2026 Obscur. All rights reserved.",
    "category": "SocialNetworking",
    "shortDescription": "Secure, encrypted messaging for micro-communities",
    "longDescription": "Obscur is a local-first Nostr messenger designed for small, invite-only micro-communities. Built with privacy, decentralization, and anti-censorship as core principles.",
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.sectigo.com",
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": [
          "English"
        ],
        "template": null
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Obscur",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximized": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "fullscreen": false,
        "transparent": false,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https: wss:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Dendro-X0/Obscur/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA2MUFCOTdBNTkxOTI4RTcKUldUbktCbFplcmthQmprMHRXbHVqNVZ6eDE4aVBYLzJ4SjVlai9MS2ZCRkl4ek9QM1orNnNuZjcK"
    }
  }
}
